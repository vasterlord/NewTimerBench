<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yulian.timerbench.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:weightSum="1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameTime">


        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70dp"
            android:layout_marginTop="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff1a79"
            android:background="#ffffff"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="7dp"
            android:text="00:00:00" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pincers"
        android:visibility="visible"
        android:layout_marginTop="145dp">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npHours"
            android:layout_marginBottom="29dp"
            android:contextClickable="false"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:solidColor="#000000"
            android:layout_weight="1"
            android:textAlignment="gravity" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npMinute"
            android:layout_alignTop="@+id/npHours"
            android:background="#ffffff"
            android:solidColor="#000000"
            android:layout_weight="1"
            android:textAlignment="gravity"
            android:visibility="visible" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npSecond"
            android:background="#ffffff"
            android:solidColor="#000000"
            android:layout_alignTop="@+id/npMinute"
            android:layout_weight="1"
            android:textAlignment="gravity" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="145dp"
        android:layout_gravity="left|center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Start"
            android:id="@+id/btnStart"
            android:textColor="#1e12ff"
            android:textSize="@dimen/dp22"
            android:background="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Reset"
            android:id="@+id/btnStop"
            android:layout_marginLeft="100dp"
            android:textColor="#f5171b"
            android:textSize="@dimen/dp22"
            android:background="#ffffff" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title of part of your time:"
        android:id="@+id/textView13"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dp"
        android:textColor="#e96519"
        android:textSize="24dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Settings"
        android:layout_weight="0"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="91dp"
        android:layout_gravity="left|bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| Set rounds/sets-->"
                android:id="@+id/button"
                android:textColor="#bc00f0"
                android:textSize="@dimen/dp22"
                android:background="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set preparing time-->"
                android:id="@+id/button2"
                android:textColor="#12e7ff"
                android:textSize="@dimen/dp22"
                android:background="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set wowking time-->"
                android:id="@+id/button3"
                android:textColor="#ff1259"
                android:textSize="@dimen/dp22"
                android:background="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Set resting time |"
                android:id="@+id/button4"
                android:textColor="#12b4ff"
                android:textSize="@dimen/dp22"
                android:background="#ffffff" />
        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
